<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="15dp">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/pref_google_pro"
        android:textColor="@color/colorPrimary"
        android:textSize="20sp"
        android:textStyle="bold|italic"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/colorPrimary"/>


    <TextView
        android:id="@+id/googleName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layoutDirection="locale"
        android:padding="5dp"
        android:text="Name"
        android:textColor="@color/colorPrimary"
        android:textDirection="locale"/>

    <TextView
        android:id="@+id/googleEmail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layoutDirection="locale"
        android:padding="5dp"
        android:text="Email"
        android:textColor="@color/colorPrimary"
        android:textDirection="locale"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/pref_user_pro"
        android:textColor="@color/colorPrimary"
        android:textSize="20sp"
        android:textStyle="bold|italic"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/colorPrimary"/>

    <TextView
        android:id="@+id/userName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layoutDirection="locale"
        android:padding="5dp"
        android:textColor="@color/colorPrimary"
        android:textDirection="locale"/>

    <TextView
        android:id="@+id/userNum"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layoutDirection="locale"
        android:padding="5dp"
        android:textColor="@color/colorPrimary"
        android:textDirection="locale"/>

    <TextView
        android:id="@+id/userLanguage"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layoutDirection="locale"
        android:padding="5dp"
        android:textColor="@color/colorPrimary"
        android:textDirection="locale"/>

    <TextView
        android:id="@+id/userCaseWorker"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layoutDirection="locale"
        android:padding="5dp"
        android:textColor="@color/colorPrimary"
        android:textDirection="locale"/>

    <TextView
        android:id="@+id/userCaseWorkerNUmber"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layoutDirection="locale"
        android:padding="5dp"
        android:textColor="@color/colorPrimary"
        android:textDirection="locale"/>

</LinearLayout>